{
    "extends": "astro/tsconfigs/base",
    "compilerOptions": {
        "strictNullChecks": true,
        "allowJs": true,
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "baseUrl": ".",
        "paths": {
            "@src": ["src"],
            "@src/*": ["src/*"],
            "@lib": ["src/lib"],
            "@lib/*": ["src/lib/*"],
            "@components": ["src/lib/components"],
            "@components/*": ["src/lib/components/*"],
        }
    }
}
