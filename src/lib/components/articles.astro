---
import type { MarkdownInstance } from 'astro'
import { Subject } from '@components'

const { posts } = Astro.props as { posts: MarkdownInstance<Record<string, any>>[] }
---

<Subject title="最新文章" class="flex-auto">
    <ul role="list">
        {
            posts.map((post) => (
                <li class="flex items-start my-4 before:content-['•'] before:font-bold before:text-xl before:absolute before:-mt-1 space-x-6">
                    <span class="text-xs font-mono shrink-0 grow-0 text-gray-400 min-w-[120px] tracking-tight leading-6 ml-4">
                        [{post.frontmatter.publish}]
                    </span>
                    <a class="hover:underline hover:text-orange-600" href={post.url}>
                        {post.frontmatter.title}
                    </a>
                </li>
            ))
        }
    </ul>
</Subject>
